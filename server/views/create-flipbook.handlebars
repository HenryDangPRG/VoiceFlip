<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>VoiceFlip</title>

  <!-- Bootstrap core CSS -->
  <link href="../resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <script src="../resources/axios.js"></script>
  <script 

    <script>
        function createFlipbook() {
            var flipbookName = document.getElementById("inputFlipbookName").value;
            if(flipbookName.trim() == "") {
                alert("Flipbook name must not be empty");
                return;
            }
            console.log("Flipbook provided name is " + flipbookName);
            axios.get("http://127.0.0.1:10001/createfolder/" + flipbookName).then(function (resp) {
                if(resp.data.includes("ERROR")) {
                    alert(resp.data); 
                } else {
                    //window.location.href = "/draw"; 
                    //document.getElementById
                    //TODO: We can cut corners by just setting some paragraph instead of using a database.
                }
            });
        }
    </script>
</head>

<body style="padding-top: 56px">

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">VoiceFlip</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Flipbooks</h1>
        <div class="list-group">
          {{#each flipbooks}}
          <a href="flipbookinfo/{{this}}" class="list-group-item">{{this}}</a>
          {{/each}}
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

		<div class="mt-3 mb-3 w-100">
            <h1>Create Your Own Flipbook</h1>
            <input id="inputFlipbookName" type="text" placeholder="Flipbook Name">
            <button class="btn btn-primary" onclick="createFlipbook()">Create</button>
		</div>


        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <div class="py-5 bg-dark fixed-bottom">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Henry Dang 2020</p>
    </div>
    <!-- /.container -->
  </div>

  <!-- Bootstrap core JavaScript -->
  <script src="../resources/jquery.min.js"></script>
  <script src="../resources/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>

